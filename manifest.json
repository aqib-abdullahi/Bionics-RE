{
    "manifest_version": 3,
    "name": "Bionics RE",
    "version": "1.0",
    "description": "Activates the Bionic reading method on a page",
    "permissions": [
        "scripting",
        "activeTab"
    ],
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "css": ["style.css"]
    }],
    "action": {
        "default_popup": "bionics.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "64": "icons/icon64.png",
            "128": "icons/icon128.png"
        }
    }
}